	public Employee CreatComEmployee(String firstName, String lastName, String socialSecurityNumber, double grossSales, double commissionRate){
		CommissionEmployee comEmp;
		comEmp = new CommissionEmployee(firstName, lastName, socialSecurityNumber, grossSales, commissionRate);
		
		return comEmp;
	}
